doctype html
html
  head
    title
      | Perfectter
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  body
    nav.navbar.navbar-default.navbar-fixed-top.header
      .container
        .navbar-header
          = link_to 'Perfectter', :root, class: "navbar-brand"
        .nav.navbar-nav
          = nav_list(controller.controller_name, "groups") do
            = link_to 'Groups', groups_path
          = nav_list(controller.controller_name, "accounts") do
            = link_to 'New Account', new_account_path
          = nav_list(controller.controller_name, "twitter_apis") do
            = link_to 'TwitterAPI', twitter_apis_path
    .main-container
      = yield